{% extends 'layout.html.twig' %}

{% block body %}


    <div class="col-lg-5 offset-lg-2 mt-4 fond pb-5 pt-3 px-5">
        <h4 class="mb-5">
            <i class="fa fa-plus me-2"></i>
            {{ 'Modifier le prime'|trans }}
        </h4>

        {{ include('prime/admin/_form.html.twig', {'button_label': 'Update'}) }}

        <div class="col-md-3 offset-md-3 mt-4 pt-3 fond">
            <div class="centrer">
                {#                <div class="row">#}
                <button type="button" class="btn btn-shadow btn-success btn-normal mb-3 me-3" id="send"
                        onclick="envoie()">
                    <i class="fa fa-save"></i>
                    {{ 'Enregistrer'|trans }}
                </button>

                <a id="{{ prime.id }}" onclick="load({{ prime.id }})" href="{{ path('prime_index') }}"
                   class="btn btn-success btn-normal mb-3">
                    <i class="fa fa-undo"></i>
                    {{ 'Retour'|trans }}
                </a>
                {{ form_rest(form) }}
                {#                </div>#}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
