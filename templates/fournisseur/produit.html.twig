{% extends
    is_granted('ROLE_ADMIN') ? 'admin.html.twig' :
    is_granted('ROLE_RH') ? 'rh.html.twig' :
    is_granted('ROLE_FINANCE') ? 'finance.html.twig' :
    is_granted('ROLE_STOCK') ? 'stock.html.twig' :
    is_granted('ROLE_LIVREUR') ? 'livreur.html.twig' :
    is_granted('ROLE_EMPLOYER') ? 'employe.html.twig' :
    'layout.html.twig'
%}


{% block body %}
    <div class="container-fluid mt-4 fond-7">
        <h3 class="mt-4 mb-5 text-bold">
            <i class="fa-brands fa-product-hunt me-2"></i>
            {{ "Liste Produits"|trans }}
        </h3>
        {% for message in app.flashes('notice') %}
            <div role="alert" class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                {{ message|trans }}
            </div>
        {% endfor %}
        <button class="btn btn-success" onclick="affecter({{fournisseur.id}})">
                <i class="fa fa-undo"></i>
                {{ 'Affecter Produits'|trans }}
            </button>
        <table class="table table-success-light table-bordered table-hover table-striped my-3" id="liste">
            <thead>
            <tr>
                <th>
                   
                </th>
                <th>{{ 'Code'|trans }}</th>
                <th>{{ 'Désignation'|trans }}</th>
                <th>{{ 'Fabricant'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
               <tr id="tr{{ produit.id }}">
                    <td data-label="{{ 'Choisir'|trans }}">
                        <input type="checkbox" id="{{ produit.id}}" onchange="trselect({{produit.id}})" />
                    </td>
                    <td>{{ produit.reference }}</td>
                    <td>{{ produit.desigantion }}</td>
                    <td>{{ produit.fabriquant }}</td>
                </tr>
            {% else %}
              
            {% endfor %}
            </tbody>
        </table>
    </div>
        {% block script %}
        <script>
            //embarquement pelerin dans un bus
            function affecter(id) {
                var produit = "0";
                $("input[type=checkbox]:checked").each(
                    function() {
                        if ($(this).attr("id") != 'tous') {
                            produit = produit + ";" + $(this).attr("id");
                        }
                    });
                if (produit != "0") {
                    if (confirm("{{'Voulez-vous vraiment affecter ces produits ?'|trans}}")) {
                        $.ajax({
                            type: "POST",
                            url: "{{ path('fournisseur_affecter')}}",
                            data: { produit : produit , id : id },
                            success: function(data) {
                                if (data['id'] != '') {
                                    document.location.href = data['id'];
                                }
                            },
                            error: function() {
                                alert("{{'La requête n a pas abouti'|trans}}");
                            }
                        });
                    }
                } else alert("{{'Selectionnez au moins un produit'|trans}}");
            }
        </script>
    {% endblock %}
{% endblock %}
