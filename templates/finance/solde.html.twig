{% extends 'layout.html.twig' %}

{% block title %}{{ 'Journal comptable'|trans }} - PharmaCare{% endblock %}

{% block finance %}active{% endblock %}

{% block journal %}active{% endblock %}
{% block comptable %}active{% endblock %}

{% block body %}

   
       
        <div class="col-lg-12 fond mt-5">
            <h4 class="mt-4">
                <i class="fa fa-money-bill-wave"></i>
                {{ 'Soldes'|trans }}
            </h4>
            {% for message in app.session.flashbag.get('notice') %}
                 <div role="alert" class="alert alert-danger alert-dismissible fade show radius-10 shadow-black mt-5 mb-5">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message|trans }}
            </div>
        {% endfor %}
            <div class="row">

                <div class="col-lg-12">
                    <div role="alert" class="alert alert-success shadow-black radius-10 mt-4 p-4 text-green">
                        <span class="text-bold">{{ 'Solde global'|trans }}</span> :
                        <h3 class="text-nowrap text-bold text-center mt-3">
                            {{ (caisse + banque + om + wave)|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }} F CFA
                        </h3>
                    </div>
                </div>
                <div class="col-lg-12">
                <div class="row">
                <div class="col-lg-6">
                    <div role="alert" class="alert alert-success shadow-black radius-10 mt-4 p-4 text-green">
                        <span class="text-bold">{{ 'Solde caisse'|trans }}</span> :
                        <h3 class="text-nowrap text-bold text-center mt-3">
                            {{ caisse|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }} F CFA
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div role="alert" class="alert alert-success shadow-black radius-10 mt-4 p-4 text-green">
                        <span class="text-bold">{{ 'Solde Orange Money :'|trans }}</span>
                        <span class="float-right">
                            <a href="{{ path('app_banque_index') }}" class="text-green">
                                {{ 'Détails >>'|trans }}
                            </a>
                        </span>
                        <h3 class="text-nowrap text-bold text-center mt-3">
                            {{ om|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }} F CFA
                        </h3>
                    </div>
                </div>
                 <div class="col-lg-6">
                    <div role="alert" class="alert alert-success shadow-black radius-10 mt-4 p-4 text-green">
                        <span class="text-bold">{{ 'Solde Wave :'|trans }}</span>
                        <span class="float-right">
                            <a href="{{ path('app_banque_index') }}" class="text-green">
                                {{ 'Détails >>'|trans }}
                            </a>
                        </span>
                        <h3 class="text-nowrap text-bold text-center mt-3">
                            {{ wave|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }} F CFA
                        </h3>
                    </div>
                </div>
                 <div class="col-lg-6">
                    <div role="alert" class="alert alert-success shadow-black radius-10 mt-4 p-4 text-green">
                        <span class="text-bold">{{ 'Avoirs en banque :'|trans }}</span>
                        <span class="float-right">
                            <a href="{{ path('app_banque_index') }}" class="text-green">
                                {{ 'Détails >>'|trans }}
                            </a>
                        </span>
                        <h3 class="text-nowrap text-bold text-center mt-3">
                            {{ banque|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }} F CFA
                        </h3>
                    </div>
                </div>
                </div>
                </div>
            </div>
        </div>

{% endblock %}
