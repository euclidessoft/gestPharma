{% extends 'layout.html.twig' %}
{% block title %}{{ 'amortissement'|trans }} - PharmaCare{% endblock %}

{% block finance %}active{% endblock %}

{% block amortissement %}active{% endblock %}

{% block body %}
    <div class="container mt-4 fond-7">
        <h3 class="mt-4 mb-5 text-bold">
            <i class="fa fa-home me-2"></i>
            {{ "Immobilisations"|trans }}
        </h3>


        <table class="table table-success-light table-bordered table-hover table-striped my-3" id="liste">
            <thead>
            <tr>
                <th>{{ 'Date'|trans }}</th>
                <th>{{ 'Compte'|trans }}</th>
                <th>{{ 'Libellé'|trans }}</th>
                <th>{{ 'Ligne de depense'|trans }}</th>
                <th>{{ 'Montant'|trans }}</th>
                <th>{{ 'Reglement'|trans }}</th>
                {# <th>{{ 'Statut'|trans }}</th> #}
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for depense in depenses %}
                <tr>
                    <td data-label="{{ 'Date'|trans }}">{{ depense.date ? depense.date|date('d/m/Y  H:i') : '' }}</td>
                    <td data-label="Compte">{{ depense.compte }}</td>
                    <td data-label="{{ 'Libellé'|trans }}">{{ depense.libelle }}</td>
                    <td data-label="{{ 'Ligne'|trans }}">{{ depense.categorie ?  depense.categorie.nom : '' }}</td>
                    <td data-label="{{ 'Montant'|trans }}">{{ depense.montant|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }}</td>
                    <td data-label="{{ 'Réglement'|trans }}">{{ depense.type }}</td>
                    {# <td data-label="{{ 'Status'|trans }}">{{ depense.statut }}</td> #}
                    <td data-label="{{ 'Actions'|trans }}" class="text-nowrap">
                        <a id="{{ depense.id }}" onclick="load({{ depense.id }})"
                           href="{{ path('finance_amortissement', {'depense': depense.id}) }}" title="{{ 'Voir'|trans }}"
                           class="btn btn-success">
                            <i class="fa fa-eye"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
