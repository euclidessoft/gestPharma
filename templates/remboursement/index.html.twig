{% extends 'layout.html.twig' %}
{% block title %} {{ "Commande"|trans }} - PharmaCare {% endblock %}
{% block finance %}active{% endblock %}
{% block remboursement %}active{% endblock %}
{% block all_remboursement %}active{% endblock %}
{% block body %}
<div class="container mt-4 fond">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-money-bill me-2"></i>
        {{ "Listes des Remboursements"|trans }}
    </h3>


    <table class="table table-success-light table-bordered table-hover table-striped my-3" id="liste">
        <thead>
            <tr>
                <th>Financement</th>
                <th>Montant</th>
                <th>Compte</th>
                <th>Date</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for remboursement in remboursements %}
            <tr>
                <td>{{ remboursement.financement.motif}}</td>
                <td>{{ remboursement.montant|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',')}}</td>
                <td>{{ remboursement.compte }}</td>
                <td>{{ remboursement.date ? remboursement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ remboursement.banque ?  remboursement.banque.nom : remboursement.type }}</td>
                <td>
                    <!-- <a title="{{ 'Voir'|trans }}" id="{{ remboursement.id }}" onclick="load({{ remboursement.id }})" href="{{ path('remboursement_show', {'id': remboursement.id}) }}" class="btn btn-success"><i class="fas fa-eye"></i></a> -->
                    <a title="{{ 'Modifier'|trans }}" href="{{ path('remboursement_edit', {'id': remboursement.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                    {{ include('remboursement/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
