{% extends 'layout.html.twig' %}
{% block title %} {{ "Liste des Subvention"|trans }} - GNT Pharma {% endblock %}
{% block subvention %}active{% endblock %}

{% block body %}
    <div class="col-lg-5 offset-lg-2 mt-4 fond-7 pb-5 pt-3 px-5">
    <h4 class="mb-5">
        <i class="fa fa-plus me-2"></i>
        {{ 'Nouveau accompte'|trans }}
    </h4>

    {{ include('subvention/_form.html.twig') }}

     <div class="col-md-3 offset-md-3 mt-4 pt-3 fond-7">
        <div class="centrer">
            {#                <div class="row">#}
            <button type="button" class="btn btn-shadow btn-green btn-normal mb-3 me-3" id="send"
                    onclick="envoie()">
                <i class="fa fa-save"></i>
                {{ 'Enregistrer'|trans }}
            </button>

            <a class="btn btn-shadow btn-success-light btn-normal mb-3" href="{{ path('app_subvention_index') }}">
                <i class="fa fa-undo"></i>
                {{ 'Retour'|trans }}
            </a>
            {{ form_rest(form) }}
        {{ form_end(form) }}

            {#                </div>#}
        </div>
    </div>
{% endblock %}
