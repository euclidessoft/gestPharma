{% extends
    is_granted('ROLE_ADMIN') ? 'admin.html.twig' :
    is_granted('ROLE_RH') ? 'rh.html.twig' :
    is_granted('ROLE_FINANCE') ? 'finance.html.twig' :
    is_granted('ROLE_STOCK') ? 'stock.html.twig' :
    is_granted('ROLE_LIVREUR') ? 'livreur.html.twig' :
    is_granted('ROLE_EMPLOYER') ? 'employe.html.twig' :
    'layout.html.twig'
%}
{% block title %} {{ "Nouveau produit"|trans }} - GNT Pharma {% endblock %}
{% block produit %}active{% endblock %}
{% block all_produits %}active{% endblock %}

{% block body %}

    <div class="col-lg-8 justify-content-center fond-7 my-5 p-4">
        <h4 class="text-bold mb-5">
            <i class="fa-brands fa-product-hunt"></i><i class="fa fa-plus"></i>
            {{ 'Nouveau produit'|trans }}
        </h4>
        {% for message in app.flashes('notice') %}
            <div role="alert" class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                {{ message|trans }}
            </div>
        {% endfor %}

        {{ include('produit/admin/_form.html.twig') }}

    </div>
    <div class="col-lg-8 justify-content-center fond-7 my-5 p-3">
        <div class="centrer gap-4">
            <button type="button" class="btn btn-shadow btn-green btn-normal" id="send"
                    onclick="envoie()">
                <i class="fa fa-save"></i>
                {{ 'Enregistrer'|trans }}
            </button>
            <button type="reset" class="btn btn-shadow btn-danger btn-normal">
                <i class="fa fa-delete-left"></i>
                {{ 'Effacer'|trans }}
            </button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
