                        <td class="text-start">TOTAL DES GAINS(Brut)</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            {% set  brut = employe.poste.salaire + totalprime + totalheuresup + totalPrimePerf - totalretenue %}
