                    {% if heureSups != 0 %}
                        <tr class="text-end">
                            <td class="text-start">Heures Suplementaires</td>
                            <td></td>
                            <td>{{ employe.poste.heureSup|number_format(0, '' , ' ') }}</td>
                            <td> {{ heureSups }}</td>
