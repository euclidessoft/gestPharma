                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        {% set totalheuresup = employe.poste.heureSup * heureSups %}
                    {% endif %}
                    {% set totalretenue = 0 %}
                    {% if nombreJours != 0 %}
                        <tr class="text-end">
                            <td class="text-start">Ponction Salariale</td>
                            <td></td>
                            <td>{{ ponction|number_format(0, '' , ' ') }}</td>
                            <td>{{ nombreJours }}</td>
                            <td></td>
                            <td>
                                {{ (ponction * nombreJours)|number_format(0, '' , ' ') }}
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        {% set totalretenue = ponction * nombreJours %}
                    {% endif %}
