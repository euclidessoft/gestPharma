{% extends 'layout.html.twig' %}
{% block paie %}active{% endblock %}
{% block fiche %}active{% endblock %}

{% block body %}
<div class="container mt-4 fond pb-5 pt-3 px-5">
    <h4 class="text-bold mb-5">
        <i class="fa-solid fa-gears fa-lg"></i>
        {{ 'Validation fiches de paies'|trans }}
    </h4>
    {% if paies|length > 1  %}
    <a href="{{ path('paie_bulletin') }}" class="btn btn-success mb-4">
        <i class="fas fa-money-check-dollar"></i> Tous les bulletins
    </a>
    {% endif %}

    <table class="table table-success-light table-bordered table-hover table-striped my-3" id="liste">
        <thead>
            <tr>
                <th>Matricule</th>
                <th>Employ√©(e)</th>
                <th>Salaire net</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for paie in paies %}
            <tr>
                <td>{{ paie.employe.matricule }}</td>
                <td>{{ paie.employe.nom~' '~paie.employe.prenom }}</td>
                <td>{{ paie.salaireNet|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }}</td>
                <td>
                    <a href="{{ path('paie_show', {'id': paie.employe.id }) }}" class="btn btn-success">
                        <i class="fa fa-eye"></i>
                        Details
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}