{{ form_start(form, {'attr': {'id': 'form'}}) }}

<div class="col-lg-6 offset-lg-2 mt-4 fond pb-5 pt-3 px-5">
    <h4 class="mb-3">
        <i class="fa-brands fa-product-hunt me-2"></i><i class="fa fa-plus me-2"></i>
        {{ 'Nouveau critère d\'évaluation'|trans }}
    </h4>

    {% for message in app.flashes('notice') %}
    <div role="alert" class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        {{ message|trans }}
    </div>
    {% endfor %}

    <div class="row">

        <div class="col-12 mb-4">
            {{ form_row(form.nom, {'attr': {'placeholder': 'Entrez le nom du critère *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.description, {'attr': {'placeholder': 'Description du critère *'}, 'label': false}) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>