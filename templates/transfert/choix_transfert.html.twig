{% extends 'layout.html.twig' %}
{% block title %} {{ "Créer un avoir"|trans }} - PharmaCare {% endblock %}
{% block finance %}active{% endblock %}
{% block transfert %}active{% endblock %}

{% block body %}
    <div class="container_paiement  mt-4 fond text-center">
        <h3 class="mt-4 mb-5 text-bold">
            <i class="fa-solid fa-money-bill me-2"></i>
            {{ 'Créer un transfert de fonds'|trans }}
        </h3>
        <div class="row">
            <div class="col-md-12">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                            <div class="p-3 rounded border border-green avoir">
                                <div class="text-green textavoir text-center py-3 rounded-top"> 
                                     <h5>Source</h5>
                                </div>
                            </div>
                            
                    </div>
                    <div class="col-lg-4">
                            <div class="p-3 rounded border border-green avoir">
                                <div class="text-green textavoir text-center py-3 rounded-top border-green">
                                    <h5>Destination</h5>
                                </div>
                            </div>
                            
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <a href="{{ path('remboursement_espece') }}">
                            <div class="p-3 rounded border border-green avoir">
                                <div class="text-green textavoir text-center py-3 rounded-top"> 
                                     <i class="fa-solid fa-cash-register fa-3x"></i>
                                     <i class="fa fa-arrow-right fa-3x"></i>
                                        <i class="fa-solid fa-landmark fa-3x"></i>
                                </div>
                                <div class="text-bold text-green textavoir text-center py-3 rounded-bottom">
                                    {{'Caisse vers Banque'|trans}}
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4">
                        <a href="{{ path('remboursement_banque') }}">
                            <div class="p-3 rounded border border-green avoir">
                                <div class="text-green textavoir text-center py-3 rounded-top border-green">
                                        <i class="fa-solid fa-landmark fa-3x"></i>
                                     <i class="fa fa-arrow-right fa-3x"></i>
                                    <i class="fa-solid fa-cash-register fa-3x"></i>
                                </div>
                                <div class="text-green textavoir text-bold text-center py-3 rounded-bottom">
                                    {{'Banque vers Caisse'|trans}}
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
