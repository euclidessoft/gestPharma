{% extends 'layout.html.twig' %}
{% block title %} {{ "Commande"|trans }} - PharmaCare {% endblock %}
{% block finance %}active{% endblock %}
{% block transfert %}active{% endblock %}
{% block all_transfert %}active{% endblock %}
{% block body %}
<div class="container mt-4 fond">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-money-bill me-2"></i>
        {{ "Listes des transfert"|trans }}
    </h3>
    {% for message in app.flashes('notice') %}
    <div role="alert" class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        {{ message|trans }}
    </div>
    {% endfor %}

     <a class="btn btn-success mb-5" href="{{ path('transfert_new') }}">
        <i class="fas fa-money-bills"></i><i class="fa fa-plus"></i>
        {{ 'Nouveau Transfert'|trans }}
    </a>

    <table class="table table-success-light table-bordered table-hover table-striped my-3" id="liste">
        <thead>
            <tr>
                <th>Date transfert</th>
                <th>Montant</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Source</th>
                <th>Destination</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transfert in transferts %}
            <tr>
                <td>{{ transfert.date ? transfert.date|date('d/m/Y') : '' }}</td>
                <td>{{ transfert.montant|number_format(2, app.request.locale == 'fr' ? ',' : '.', app.request.locale == 'fr' ? ' ' : ',') }} FCFA</td>
                <td>{{ transfert.user.nom }}</td>
                <td>{{ transfert.user.prenom }}</td>
                <td>{{ transfert.source }}</td>
                <td>{{ transfert.destination }}</td>
                <td>
                    <!-- <a id="{{ transfert.id}}" onclick="load({{ transfert.id }})" href="{{ path('transfert_show', {'id': transfert.id}) }}" class="btn btn-success"><i class="fas fa-eye"></i></a> -->
                    <a href="{{ path('transfert_edit', {'id': transfert.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                    {{ include('transfert/_delete_form.html.twig' )}}
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
{% endblock %}
