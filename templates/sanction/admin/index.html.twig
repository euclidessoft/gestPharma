{% extends 'layout.html.twig' %}
{% block title %} {{ "Santions"|trans }} - PharmaCare {% endblock %}
{% block discipline %}active{% endblock %}
{% block sanctions %}active{% endblock %}

{% block body %}
    <div class="col-lg-8 mt-4 fond">
        <h3 class="mt-4 mb-5 text-bold">
            <i class="fa fa-money-bill me-2"></i>
            {{ "Liste des sanctions"|trans }}
        </h3>

        <a href="{{ path('sanction_new') }}" class="btn btn-success mb-4">
            <i class="fas fa-plus"></i>
            {{ "Nouvelle sanction"|trans }}
        </a>

        <table class="table table-success-light table-bordered table-hover table-striped my-3" id="liste">
            <thead>
            <tr>
                <th>{{ "Employé"|trans }}</th>
                <th>{{ "Type de sanction"|trans }}</th>
                <th>{{ "Date de création"|trans }}</th>
                <th>{{ "Date(s) et jour(s)"|trans }}</th>
                <th>{{ "Actions"|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for sanction in sanctions %}
                <tr>
                    <td>{{ sanction.employe.nom ~ ' ' ~ sanction.employe.prenom }}</td>
                    <td>{{ sanction.typeSanction.nom }}</td>
                    <td>{{ sanction.dateCreation ? sanction.dateCreation|date('d/m/Y') : '' }}</td>
                    <td>
                        {% if sanction.typeSanction.nom == 'Mis à pied' %}
                            {{ "Du"|trans }} {{ sanction.dateDebut ? sanction.dateDebut|date('d/m/Y') : '' }}
                            {{ "au"|trans }} {{ sanction.dateFin ? sanction.dateFin|date('d/m/Y') : '' }}
                            <br>
                        {% else %}

                        {% endif %}
                        {{ sanction.nombreJours ? sanction.nombreJours : '-' }} {{ "jours"|trans }}
                    </td>
                    <td class="text-center">
                        {#<a href="{{ path('sanction_show', {'id': sanction.id}) }}" class="btn btn-success">
                            <i class="fas fa-eye"></i>
                        </a>#}
                        <a href="{{ path('sanction_edit', {'id': sanction.id}) }}" class="btn btn-success">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}