{{ form_start(form, {'attr': {'id': 'form'}}) }}

<div class="col-lg-5 offset-lg-2 mt-4 fond-7 pb-5 pt-3 px-5">
    <h4 class="mb-3">
    <i class="fa-solid fa-calendar-days me-2"></i><i class="fa fa-plus me-2"></i>
        {{ 'Nouveau planning de congé'|trans }}
    </h4>

    {% for message in app.flashes('notice') %}
        <div role="alert" class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            {{ message|trans }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-12 mb-4">
            {{ form_row(form.employe, {'attr': {'placeholder': 'Selectionnez un employé *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.dateDebut, {'attr': {'title': 'Date début de congé *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.dateFin, {'attr': {'title': 'Date fin de congé *'}, 'label': false}) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>