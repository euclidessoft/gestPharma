{{ form_start(form, {'attr': {'id': 'form'}}) }}

<div class="col-lg-5 offset-lg-2 mt-4 fond pb-5 pt-3 px-5">
    <h4 class="mb-3">
        <i class="fa-brands fa-product-hunt me-2"></i><i class="fa fa-plus me-2"></i>
        {{ 'Nouvel financement Apport'|trans }}
    </h4>

    {% for message in app.flashes('notice') %}
    <div role="alert" class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        {{ message|trans }}
    </div>
    {% endfor %}
    <div class="row">

        <div class="col-12 mb-4">
            {{ form_row(form.motif, {'attr': {'placeholder': 'Libelle Financement *'}, 'label': 'Libelle Financement *'}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.montant, {'attr': {'placeholder': 'Montant *'}, 'label': 'Montant *'}) }}
        </div>

        <div class="col-12 mb-4"> 
            {{ form_row(form.Type, { 'attr' : {'onchange' : 'typeversement()'}, 'label': 'Type de financement *'}) }}
        </div>
    </div>
    <div id="versement">
        <div class="form-group">
            {{ form_row(form.banque, {'label':'Banque', 'attr' : {'placeholder':'Banque'}}) }}
        </div>
        <div class="form-group mt-4">
            {{ form_row(form.numero, {'label':'Numéro', 'attr' : {'placeholder':'Numéro'}}) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>


{% block scripts %}
<script>
    function typeversement() {
        if ($('#financement_Type option:selected').val() == 'Cheque' || $('#financement_Type option:selected').val() == 'Virement') {
            $('#versement').show();
            $('#depense_numero').val();
        } else {
            $('#versement').hide();
            $('#depense_numero').val();
        }
    }
</script>

{% endblock %}