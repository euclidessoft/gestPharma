{% extends
   
    'layout.html.twig'
%}
{% block title %} {{ "Commande"|trans }} - PharmaCare {% endblock %}
{% block finance %}active{% endblock %}
{% block achat %}active{% endblock %}
{% block new_achat %}active{% endblock %}

{% block body %}
<div class="col-lg-5 offset-lg-2 mt-4 fond pb-5 pt-3 px-5">
    <h4 class="mb-3">
        <i class="fa-brands fa-product-hunt me-2"></i><i class="fa fa-plus me-2"></i>
        {{ 'Paiement Commande'|trans }}
    </h4>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message|trans }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
   <h5> {{ achat.montant|number_format(2, ',' ,' ') }} F CFA</h5>
    {{ include('facture/_form.html.twig') }}
    <div class="col-12 mt-4 pt-3 fond">
        <div class="centrer">
            {#                <div class="row">#}
            <button type="button" class="btn btn-shadow btn-success btn-normal mb-3 me-3" id="send"
                    onclick="envoie()">
                <i class="fa fa-save"></i>
                {{ 'Enregistrer'|trans }}
            </button>

            <button type="reset" class="btn btn-shadow btn-danger btn-normal mb-3">
                <i class="fa fa-delete-left"></i>
                {{ 'Effacer'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>

    {% endblock %}
