{% extends 'layout.html.twig' %}
{% block title %} {{ "Nouvelle ligne de dépense"|trans }} - GNT Pharma {% endblock %}
{% block employe %}active{% endblock %}
{% block paie %}active{% endblock %}
{% block accompte %}active{% endblock %}

{% block body %}
<div class="container mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
       <i class="fa-solid fa-money-check-dollar"></i>
        {{ "Gestion des Accompte"|trans }}
    </h3>
 <a class="btn btn-success mb-3" href="{{ path('app_accompte_new') }}"><i class="fa fa-plus"></i> {{ "Nouveau Accompte"|trans }}</a>


    <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_accompte_index') }}">
                    {{ 'Non payées'|trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    {{ 'déja payées'|trans }}
                </a>
            </li>
        </ul>


     <table class="table table-success-light table-bordered table-hover table-striped my-3" id="liste">
        <thead>
            <tr>
               
                <th>Date</th>
                <th>Employe</th>
                <th>Montant</th>
            </tr>
        </thead>
        <tbody>
        {% for accompte in accomptes %}
            <tr>
                <td>{{ accompte.date ? accompte.date|date('d/mY') : '' }}</td>
                <td>{{ accompte.employe.prenom }} {{ accompte.employe.nom }}</td>
                <td>{{ accompte.montant|number_format(0, '', ' ') }}</td>
            </tr>
        {% else %}
           
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
