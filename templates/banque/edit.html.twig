{% extends
  
    'layout.html.twig'
%}

{% block body %}
<div class="col-lg-5 offset-lg-2 mt-4 fond pb-5 pt-3 px-5">
    <h4 class="mb-5">
        <i class="fa-solid fa-landmark"></i><i class="fa fa-edit me-2"></i>
        {{ 'Modifier nom banque'|trans }}
    </h4>


    {{ include('banque/_form_edit.html.twig') }}

    <div class="col-md-3 offset-md-3 mt-4 pt-3 fond">
        <div class="centrer">
            {#                <div class="row">#}
            <button type="button" class="btn btn-shadow btn-success btn-normal mb-3 me-3" id="send"
                    onclick="envoie()">
                <i class="fa fa-save"></i>
                {{ 'Enregistrer'|trans }}
            </button>

            <a id="{{ banque.id }}" onclick="load({{ banque.id }})" href="{{ path('banque_index') }}" class="btn btn-success btn-normal mb-3">
                <i class="fa fa-undo"></i>
                {{ 'Retour'|trans }}
            </a>
            {{ form_rest(form) }}
            {#                </div>#}
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
