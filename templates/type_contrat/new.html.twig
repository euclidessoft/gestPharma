                    <i class="fa fa-save"></i>
                    {{ 'Enregistrer'|trans }}
                </button>

                <button type="reset" class="btn btn-shadow btn-danger btn-normal mb-3">
                    <i class="fa fa-delete-left"></i>
                    {{ 'Effacer'|trans }}
                </button>
                {{ form_rest(form) }}
                {#                </div>#}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}