{% block title %} {{ "Nouveau type_contrat√©"|trans }} - PharmaCare {% endblock %}
{% block administration %}active{% endblock %}
{% block config %}active{% endblock %}
{% block centre %} centre {% endblock %}

{% block body %}
    <div class="col">
        <div class="col-5 fond p-5">
            <h4 class="mb-5">
                <i class="fa fa-plus me-2"></i>
                {{ 'Nouveau type de contrat'|trans }}
            </h4>

            {{ include('type_contrat/_form.html.twig') }}
        </div>
        <div class="col-5 mt-4 pt-3 fond">
            <div class="centrer">
                {#                <div class="row">#}
                <button type="button" class="btn btn-shadow btn-success btn-normal mb-3 me-3" id="send"
